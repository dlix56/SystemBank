<Window x:Class="BankS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankS"
        mc:Ignorable="d"
        Title="System zarządzania bankiem"
        Height="500"
        Width="800"
        Background="#FFF8FB">

    <Window.Resources>
        <SolidColorBrush x:Key="PinkMain" Color="#FF69B4"/>
        <SolidColorBrush x:Key="PinkLight" Color="#FFF0F5"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PinkMain}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="{StaticResource PinkLight}"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer HorizontalAlignment="Left" Width="800">
        <StackPanel x:Name="Banki" Margin="20" Width="731">

            <TextBlock Text="Numer konta"/>
            <TextBox Name="NrKontaBox"/>

            <TextBlock Text="Saldo początkowe"/>
            <TextBox Name="SaldoBox"/>

            <TextBlock Text="Kwota do wypłaty"/>
            <TextBox Name="KwotaBox"/>

            <TextBlock Text="Typ konta"/>
            <ComboBox Name="TypKontaBox">
                <ComboBoxItem Content="Osobiste"/>
                <ComboBoxItem Content="Oszczędnościowe"/>
            </ComboBox>

            <Button Content="Dodaj konto" Click="DodajKonto_Click"/>
            <Button Content="Pokaż konta" Click="PokazKonta_Click"/>
            <Button Content="Pokaż konta (sortuj po saldzie)" Click="Sortuj_Click"/>
            <Button Content="Wypłać z konta" Click="Wyplac_Click"/>
            <Button Content="Zapisz do XML" Click="Zapisz_Click"/>
            <Button Content="Wczytaj z XML" Click="Wczytaj_Click"/>

            <TextBlock Text="Dane kont:" Margin="0,15,0,0"/>
            <TextBox Name="OutputBox"
                     Height="200"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>

        </StackPanel>
    </ScrollViewer>

</Window>
